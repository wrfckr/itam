<div class="w3-panel">
	<form action="/user/add" method="get">
		<button class="w3-button w3-round-large w3-teal" type="submit">Добавить пользователя</button>
	</form>
</div>
<table class="w3-table-all w3-card-4">
	<thead>
		<tr>
			<th>Имя</th>
			<th>Отдел</th>
			<th>Должность</th>
			<th>Действия</th>
		</tr>
	</thead>
	<tbody>
		<% tableData.forEach(item => { %>
		<tr>
			<td><%= item.name %></td>
			<td><%= item.departmentname %></td>
			<td><%= item.position %></td>
			<td>
				<div class="w3-bar">
					<form id="edit<%= item.id %>" action="/user/edit/<%= item.id %> " method="get"></form>
					<form id="delete<%= item.id %>"  action="/user/delete/<%= item.id %> " method="get"></form>
					<div class="w3-bar">
						<button form="edit<%= item.id %>" id="dtnEdit" class="w3-button w3-orange" style="width: 100px" type="submit">
							Изменить
						</button>
						<button form="delete<%= item.id %>" class="w3-button w3-red" style="width: 100px" type="submit">
							Удалить
						</button>
					</div>
				</div>
			</td>
		</tr>
		<% }); %>
	</tbody>

	<br />
</table>
